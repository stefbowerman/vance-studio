/* FONT PATH
 * -------------------------- */

@font-face {
  font-family: 'FontAwesome';
  src: url('{{ "fontawesome-webfont.eot" | asset_url }}?v=#{$fa-version}');
  src: url('{{ "fontawesome-webfont.eot" | asset_url }}?#iefix&v=#{$fa-version}') format('embedded-opentype'),
    url('{{ "fontawesome-webfont.woff2" | asset_url }}?v=#{$fa-version}') format('woff2'),
    url('{{ "fontawesome-webfont.woff" | asset_url }}?v=#{$fa-version}') format('woff'),
    url('{{ "fontawesome-webfont.ttf" | asset_url }}?v=#{$fa-version}') format('truetype'),
    url('{{ "fontawesome-webfont.svg" | asset_url }}?v=#{$fa-version}#fontawesomeregular') format('svg');
  font-weight: normal;
  font-style: normal;
}
